<Window x:Class="Teammanager.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Team Manager" Height="600" Width="800"
        Background="White"
        FontSize="13">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top" Height="auto" IsManipulationEnabled="True" BorderThickness="1" BorderBrush="Black">
                <Menu.Background>
                    <LinearGradientBrush StartPoint="0.0,0.0" EndPoint="0.0,1.0">
                        <GradientStop Color="#FFFFFFFF" Offset="1.0"/>
                        <GradientStop Color="#F0A0AAFA" Offset="0.5"/>
                        <GradientStop Color="#FFFFFFFF" Offset="0.0"/>
                    </LinearGradientBrush>
                </Menu.Background>
                <MenuItem Header="File">
                    <MenuItem Header="Add Team"/>
                </MenuItem>
                <MenuItem Header="About">
                    <MenuItem Header="Licence"/>
                    <MenuItem Header="Version"/>
                </MenuItem>
            </Menu>
        <Grid DockPanel.Dock="Top" Margin="5">
                <Grid.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="White" Offset="0.6"/>
                        <GradientStop Color="#F0A0AAFA" Offset="1.0"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <TreeView Grid.Column="0">
                <TreeViewItem Header="Team A"/>
                    <TreeViewItem Header="Team Beta">
                        <TreeViewItem Header="Member No 1"/>
                    </TreeViewItem>
                </TreeView>
            <Grid Grid.Column="1" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="0" Grid.Row="0" Text="Home" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Left"/>
                    <TextBlock Grid.Column="1" Grid.Row="0" Text="Visitor" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Left"/>
                    <TextBlock Grid.Column="0" Grid.Row="1" Text="Position 1:" TextAlignment="Left"/>
                    <TextBlock Grid.Column="1" Grid.Row="1" Text="Position 2:" TextAlignment="Left"/>
                    <TextBlock Grid.Column="0" Grid.Row="2" Text="Position 3:" TextAlignment="Left"/>
                    <TextBlock Grid.Column="1" Grid.Row="2" Text="Position 4:" TextAlignment="Left"/>
                    <TextBlock Grid.Column="0" Grid.Row="3" Text="Position 5:" TextAlignment="Left"/>
                    <TextBlock Grid.Column="1" Grid.Row="3" Text="Position 6:" TextAlignment="Left"/>
                    <TextBlock Grid.Column="0" Grid.Row="4" Text="Position 7:" TextAlignment="Left"/>
                    <TextBlock Grid.Column="1" Grid.Row="4" Text="Position 8:" TextAlignment="Left"/>
                    <TextBlock Grid.Column="0" Grid.Row="5" Text="Position 9:" TextAlignment="Left"/>
                    <TextBlock Grid.Column="1" Grid.Row="5" Text="Position 10:" TextAlignment="Left"/>
                </Grid>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
