<UserControl x:Class="RWLigamodus.View.StdTournamentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:p="clr-namespace:RWLigamodus.View.Properties"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             FontSize="16">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition MinHeight="300" Height="auto"/>
                </Grid.RowDefinitions>
                <!--home-->
                <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center">
                    <!--<Image Source=""/>-->
                    <TextBlock TextWrapping="Wrap" Text="Heimmannschaft" Margin="10" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>
                <Grid Grid.Row="1">
                    <Viewbox VerticalAlignment="Top">
                        <DataGrid HorizontalContentAlignment="Stretch" FlowDirection="RightToLeft" ItemsSource="{Binding TeamListVisitors}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header=""/>
                                <DataGridTextColumn Header="{x:Static p:Resources.res}"/>
                                <DataGridTextColumn Header="{x:Static p:Resources.ser4}"/>
                                <DataGridTextColumn Header="{x:Static p:Resources.ser3}"/>
                                <DataGridTextColumn Header="{x:Static p:Resources.ser2}"/>
                                <DataGridTextColumn Header="{x:Static p:Resources.ser1}"/>
                                <DataGridTextColumn Header="Name"/>
                                <DataGridTextColumn Header="Pos"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Viewbox>
                </Grid>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition MinHeight="300" Height="auto"/>
                </Grid.RowDefinitions>
                <!--visitor-->
                <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center">
                    <!--<Image Source=""/>-->
                    <TextBlock TextWrapping="Wrap" Text="Gastmannschaft" Margin="10" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>
                <Grid Grid.Row="1">
                    <Viewbox VerticalAlignment="Top">
                        <DataGrid HorizontalContentAlignment="Stretch" FlowDirection="LeftToRight" ItemsSource="{Binding TeamListVisitors}">
                            <DataGrid.Columns><!--reverse Columns-->
                                <DataGridTextColumn Header=""/>
                                <DataGridTextColumn Header="{x:Static p:Resources.res}"/>
                                <DataGridTextColumn Header="{x:Static p:Resources.ser4}"/>
                                <DataGridTextColumn Header="{x:Static p:Resources.ser3}"/>
                                <DataGridTextColumn Header="{x:Static p:Resources.ser2}"/>
                                <DataGridTextColumn Header="{x:Static p:Resources.ser1}"/>
                                <DataGridTextColumn Header="Name"/>
                                <DataGridTextColumn Header="Pos"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Viewbox>
                </Grid>
            </Grid>
            <Grid Grid.Column="2">
                <!--timecontrol-->
            </Grid>
        </Grid>
        <Grid Grid.Row="1"><!--only for play-off-->
            
        </Grid>
    </Grid>
</UserControl>
